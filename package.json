{
	"name": "@mc/mc-components",
	"version": "16.0.0",
	"description": "MC Components AngularJS",
	"main": "index.js",
	"author": "Hector Morales",
	"scripts": {
		"start": "yarn dev",
		"dev": "vite --config vite.config.dev.js serve",
		"test": "vitest --ui --coverage.enabled=true",
		"coverage": "vitest run --coverage",
		"prebuild": "rm -rf dist",
		"build": "vite build",
		"serve": "vite preview",
		"lint": "eslint . --ext ts --max-warnings 0 --fix",
		"format": "prettier \"app/**/*.{ts,js,json,scss,css}\" --write",
		"new:c": "hygen component new"
	},
	"dependencies": {
		"angular": "^1.8.3",
		"angular-animate": "^1.8.3",
		"angular-aria": "^1.8.3",
		"angular-material": "^1.2.5",
		"angular-messages": "^1.8.3"
	},
	"peerDependencies": {
		"angular": "^1.5.11",
		"angular-animate": "^1.5.11",
		"angular-aria": "^1.8.3",
		"angular-material": "^1.2.1",
		"angular-messages": "^1.5.11"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.3.0",
		"@commitlint/config-conventional": "^19.2.2",
		"@typescript-eslint/eslint-plugin": "^7.11.0",
		"@typescript-eslint/parser": "^7.11.0",
		"@vitest/coverage-istanbul": "^1.6.0",
		"@vitest/ui": "^1.6.0",
		"eslint": "^8.24.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-angular": "^4.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"husky": "^9.0.11",
		"hygen": "^6.2.11",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"sass": "^1.55.0",
		"typescript": "^5.4.5",
		"vite": "^5.2.3",
		"vite-plugin-eslint": "^1.8.1",
		"vitest": "^1.6.0"
	},
	"lint-staged": {
		"*.{.html,.ts,js,json,scss,css}": [
			"prettier --write",
			"yarn lint",
			"yarn test"
		]
	}
}
