{
	"name": "@mc/mc-components",
	"version": "2.0.0",
	"description": "MC Components AngularJS",
	"main": "index.js",
	"author": "Hector Morales",
	"scripts": {
		"start": "yarn dev",
		"dev": "vite --config vite.config.dev.js serve",
		"prebuild": "rm -rf dist",
		"build": "vite build",
		"serve": "vite preview",
		"lint": "eslint",
		"format": "prettier \"app/**/*.{ts,js,json,scss,css}\" --write"
	},
	"dependencies": {
		"angular": "^1.8.3",
		"angular-animate": "^1.8.3",
		"angular-aria": "^1.8.3",
		"angular-material": "^1.2.5",
		"angular-messages": "^1.8.3"
	},
	"devDependencies": {
		"eslint": "^8.24.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-angular": "^4.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"husky": "^9.0.11",
		"hygen": "^6.2.11",
		"lint-staged": "^15.2.2",
		"prettier": "^3.2.5",
		"sass": "^1.55.0",
		"vite": "^5.2.3"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.{ts,js,json,scss,css}": [
			"prettier --write",
			"git add"
		]
	},
	"publishConfig": {
		"registry": "https://mc-components-252355243038.d.codeartifact.us-east-1.amazonaws.com/npm/test/"
	}
}
